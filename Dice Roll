class Main { // Salman Mohamood 
  public static void main(String[] args) {
    // enter your code in this area!
    int min = 2; // minimum value of the range
    int max = 12; // maximum value of the range
    int numRolls = 6; // number of times to roll the dice

    for (int i = 0; i < numRolls; i++) {
      // simulate rolling two dice
      int roll1 = (int) (Math.random() * 6) + 1; // generates a random integer from 1 to 6
      int roll2 = (int) (Math.random() * 6) + 1; // generates a random integer from 1 to 6
      int sum = roll1 + roll2; // calculates the sum of the two dice
      System.out.println("Roll " + (i + 1) + ": " + sum); // output result
    }
  } // end of main routine
} // end of Main class (and program)
